<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cartproductimg"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:padding="10dp"
                android:src="@drawable/no_image_available"
                android:layout_weight="6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cartproductname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aclonica"
                    android:layout_marginTop="15dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:text="Product Name"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/carttotalAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:singleLine="true"
                        android:textColor="#146318"
                        android:text="3000"
                        android:layout_weight="9"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:text="Qty"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/cartqty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:layout_marginLeft="7dp"
                        android:singleLine="true"
                        android:text="3"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_marginLeft="7dp"
                        android:fontFamily="@font/aclonica"
                        android:singleLine="true"
                        android:text="X"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/cartproductAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="1000"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/offer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/aclonica"
                        android:singleLine="true"
                        android:textColor="#66AF19"
                        android:text="Offer available"
                        android:textSize="10dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:src="@drawable/delivery"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/aclonica"
                        android:singleLine="true"
                        android:layout_weight="3"
                        android:textColor="#DC5B5E39"
                        android:text="Get delivered in 3 Days"
                        android:textSize="7dp" />

                    <ImageView
                        android:id="@+id/prodelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_gravity="right"
                        android:src="@drawable/delete" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#818C8585"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>