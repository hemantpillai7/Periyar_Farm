<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceSoilTestingActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Soil Testing"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <ImageView
                android:layout_width="46dp"
                android:layout_height="43dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/testube" />
        </LinearLayout>

        <EditText
            android:id="@+id/plot_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/borderbg"
            android:drawableLeft="@drawable/profile"
            android:elevation="3dp"
            android:hint="Your Name"
            android:padding="13dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/plot_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderbg"
            android:drawableLeft="@drawable/email"
            android:elevation="3dp"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:padding="13dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/plot_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderbg"
            android:drawableLeft="@drawable/call"
            android:elevation="3dp"
            android:maxLength="10"
            android:minLines="10"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="13dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/plot_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderbg"
            android:drawableLeft="@drawable/location"
            android:elevation="3dp"
            android:hint="Address"
            android:padding="13dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/plot_plotaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderbg"
            android:drawableLeft="@drawable/plotlocation"
            android:elevation="3dp"
            android:hint="Plot location"
            android:padding="13dp"
            android:singleLine="true" />

        <Spinner
            android:id="@+id/plot_spinner"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderbg"
            android:entries="@array/select_soiltesting"
            android:padding="13dp" />

        <Button
            android:id="@+id/plot_submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/loginbg"
            android:padding="14dp"
            android:text="Book"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>